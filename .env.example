# ========================================
# CrawlAgent Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
# Version: v2.2 (2025-11-16) - Phase 1 Complete

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://crawlagent:password@localhost:5432/crawlagent

# ========================================
# API Keys (REQUIRED)
# ========================================
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Get your Anthropic API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Optional: Google Gemini API key (for fallback/alternative)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ========================================
# LLM Model Configuration
# ========================================
# UC2: Self-Healing Models
UC2_PROPOSER_MODEL=gpt-4o
UC2_VALIDATOR_MODEL=gpt-4o

# UC3: New Site Discovery Models
UC3_DISCOVERER_MODEL=claude-sonnet-4-5-20250929
UC3_VALIDATOR_MODEL=gpt-4o

# Fallback Model
FALLBACK_MODEL=gpt-4o-mini

# ========================================
# Quality & Consensus Thresholds
# ========================================
UC1_QUALITY_THRESHOLD=80.0
UC2_CONSENSUS_THRESHOLD=0.5
UC3_CONSENSUS_THRESHOLD=0.5

# Consensus Weights (must sum to 1.0)
CONSENSUS_WEIGHT_AGENT1=0.3
CONSENSUS_WEIGHT_AGENT2=0.3
CONSENSUS_WEIGHT_QUALITY=0.4

# ========================================
# Retry Configuration
# ========================================
MAX_RETRIES=3
RETRY_DELAY=2
UC2_MAX_RETRIES=3
UC3_MAX_RETRIES=3

# ========================================
# HTTP Client Configuration
# ========================================
REQUEST_TIMEOUT=10
USER_AGENT=Mozilla/5.0 (compatible; CrawlAgent/1.0)

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/crawlagent.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# ========================================
# Server Configuration
# ========================================
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860
GRADIO_SHARE=false

# ========================================
# Performance Configuration
# ========================================
MAX_WORKERS=5
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ========================================
# Feature Flags
# ========================================
ENABLE_JSON_LD_OPTIMIZATION=true
ENABLE_DISTRIBUTED_SUPERVISOR=false
ENABLE_COST_TRACKING=true

# ========================================
# Development/Debug
# ========================================
DEBUG=false
TESTING=false
